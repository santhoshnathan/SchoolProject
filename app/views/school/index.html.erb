	<% content_for :head do %>
		<%= stylesheet_link_tag "font-awesome.min" %>
		<title>School List</title>
	<% end %>


	<div class="container">
		<h2>School List</h2>
		<%= link_to "New School", new_school_path, class: "btn btn-success btn-xs pull-right bottom-space-10" %>
		<div class="clearfix"></div>
		<table class="table table-bordered table-striped table-condensed">
			<thead>
				<tr>
					<td>School Name</td>
					<td>School Code</td>
					<td>School Address</td>
					<td colspan="4"></td>
				</tr>
			</thead>
			<tbody>
				<% @schools.each do |school| %>
				<tr>
					<td><%= link_to school.name, controller: 'school', action:'show', id: school.id %></td>
					<td><%= school.code %></td>
					<td><%= school.address %></td>
					<!-- Normal Links in Ruby on Rails -->
					<!--<td><%# link_to 'Show', school_path(school), class: "btn btn-success btn-xs btn-size-lg" %></td>
					<td><%# link_to 'Edit', edit_school_path(school), class: "btn btn-primary btn-xs btn-size-lg" %></td>
					<td><%# link_to 'Destroy', school_path(school), class: "btn btn-danger btn-xs btn-size-lg", 
					              method: :delete,
					              data: { confirm: 'Are you sure you want to delete ' + school.name + ' ?' } %></td>  -->

					<td>
						<%= link_to school_path(school), class: "btn btn-info btn-xs btn-size-lg" do %>
							<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> <%= "View" %>
						<% end %>
					</td>
					<td>
						<%= link_to edit_school_path(school), class: "btn btn-primary btn-xs btn-size-lg" do %>
							<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> <%= "Edit" %>
						<% end %>
					</td>
					<td>
						<%= link_to school_path(school), class: "btn btn-danger btn-xs btn-size-lg", method: :delete,
					              data: { confirm: 'Are you sure you want to delete ' + school.name + ' ?' }  do %>
							<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> <%= "Destroy" %>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>	

		<div>
			<h4><%= link_to "Index" %></h4>
			
		</div>
	</div>